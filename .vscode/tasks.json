{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "make: all",
      "type": "shell",
      "command": "make",
      "args": ["-j"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "make: clean",
      "type": "shell",
      "command": "make",
      "args": ["clean"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "make: install",
      "type": "shell",
      "command": "sudo",
      "args": ["make", "install"],
      "problemMatcher": []
    },
    {
      "label": "make: test",
      "type": "shell",
      "command": "make",
      "args": ["test", "-j"],
      "group": "test",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "generate compile_commands.json",
      "type": "shell",
      "command": "bear",
      "args": ["--", "make", "-j"],
      "problemMatcher": []
    },
    {
      "label": "run vitl",
      "type": "shell",
      "command": "${workspaceFolder}/bin/vitl",
      "args": [],
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "run vitl (file)",
      "type": "shell",
      "command": "${workspaceFolder}/bin/vitl",
      "args": ["${file}"],
      "group": "test",
      "problemMatcher": []
    }
  ]
}
